generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions", "jsonProtocol"]
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL")
  directUrl         = env("POSTGRES_URL_NON_POOLING")
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING")
  extensions        = [postgis]
}

model buildings {
  name       String                                 @id
  geom       Unsupported("geometry(Polygon, 4326)")
  properties Json
}

model studies {
  id          Int    @id @default(autoincrement())
  slug        String @unique
  name        String
  description String
  image_src   String
}

model themes {
  id    Int    @id @default(autoincrement())
  slug  String @unique
  name  String
}

model scenarios {
  id          Int    @id @default(autoincrement())
  slug        String @unique
  name        String
  description String
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL")
  directUrl         = env("POSTGRES_URL_NON_POOLING")
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING")
  extensions        = [postgis]
}

model Buildings {
  name       String                                 @id
  geom       Unsupported("geometry(Polygon, 4326)")
  properties Json

  @@map("buildings")
}

model Study {
  id          Int     @id @default(autoincrement())
  slug        String  @unique
  name        String
  description String
  imageSrc    String
  themes      Theme[]

  @@map("study")
}

model Theme {
  id        Int        @id @default(autoincrement())
  slug      String     @unique
  name      String
  Study     Study?     @relation(fields: [studyId], references: [id])
  studyId   Int?
  scenarios Scenario[]

  @@map("theme")
}

model Scenario {
  id          Int    @id @default(autoincrement())
  slug        String @unique
  name        String
  description String
  Theme       Theme? @relation(fields: [themeId], references: [id])
  themeId     Int?

  @@map("scenario")
}
